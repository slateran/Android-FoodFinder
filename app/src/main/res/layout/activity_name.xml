<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="helloworld.webmd.mmu.ac.uk.findstuff.Name"
    android:background="#90fee8">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInput"
        android:layout_marginTop="34dp"
        android:hint="Search manually by typing a name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button5"
        android:onClick="SearchClickName"
        android:layout_alignBottom="@+id/textInput"
        android:layout_alignEnd="@+id/scrollView2"
        android:background="#ffffff"
        android:layout_alignTop="@+id/textInput" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/button5"
    android:id="@+id/scrollView2">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_alignParentEnd="true"
        android:id="@+id/displayAddressTable"></TableLayout>
</ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button9"
        android:layout_alignEnd="@+id/button5"
        android:layout_above="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button5"
        android:background="#ff0404"
        android:textColor="#ffffff"
        android:onClick="homeButton" />

</RelativeLayout>
